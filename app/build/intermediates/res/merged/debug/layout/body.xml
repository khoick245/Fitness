<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


<Button
        android:id="@+id/chestButton"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="66dp"
        android:text="Chest"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/body2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/shoulderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="33dp"
        android:text="Shoulder"
        android:layout_alignBottom="@+id/chestButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/absButton"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="27dp"
        android:text="Abs"
        android:layout_below="@+id/bicepButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <Button
        android:id="@+id/bicepButton"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:text="Bicep"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/chestButton"
        android:layout_alignStart="@+id/absButton" />

    <Button
        android:id="@+id/quadButton"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:text="Quad"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/absButton"
        android:layout_alignEnd="@+id/shoulderButton" />

    <Button
        android:id="@+id/calfButton"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:text="Calf"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/quadButton"
        android:layout_alignStart="@+id/chestButton" />

    <Button
        android:id="@+id/tricepButton"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:text="Tricep"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/bicepButton"
        android:layout_alignBottom="@+id/bicepButton"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/turnBehind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="Turn Behind" />


</RelativeLayout>