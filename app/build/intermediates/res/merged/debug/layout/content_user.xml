        android:layout_marginTop="34dp"
        android:layout_below="@+id/quadButton"
        android:layout_alignStart="@+id/chestButton" />

    <Button
        android:id="@+id/tricepButton"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:text="Tricep"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/bicepButton"
        android:layout_alignBottom="@+id/bicepButton"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/turnBehind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
