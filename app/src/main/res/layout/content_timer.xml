<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context="com.amazonaws.fitness.TimerActivity">


    <TextView
        android:text="00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginTop="105dp"
        android:id="@+id/txtTimer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTimer"
        android:layout_alignEnd="@+id/txtTimer"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="53dp"
        android:id="@+id/btnStartTimer" />

    <Button
        android:text="Pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPauseTimer"
        android:layout_alignBaseline="@+id/btnStartTimer"
        android:layout_alignBottom="@+id/btnStartTimer"
        android:layout_toEndOf="@+id/btnStartTimer" />

    <Button
        android:text="View Running List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtTimer"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="118dp"
        android:id="@+id/btnTimerList" />
</RelativeLayout>
